{
    "name": "hackathon-backend-service",
    "version": "1.0.0",
    "description": "It is a backend service for hackathon project",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
