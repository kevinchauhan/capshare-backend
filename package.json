            "npm run format:fix"
        ]
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.2",
        "nodemon": "^3.0.1",
        "prettier": "3.0.3"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "winston": "^3.11.0"
    }
}
